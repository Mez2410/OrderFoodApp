<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vuphi.kitchen.KitchenActivity">

    <ImageView
        android:id="@+id/img_kitchen_chef"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/icon_kitchen_chef"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/eight_dp" />

    <ImageView
        android:id="@+id/img_log_out"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/image_logout"
        app:layout_constraintLeft_toRightOf="@+id/img_kitchen_chef"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
