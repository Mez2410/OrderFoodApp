<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/lo_margin_top_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_drink"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lo_height_cv_item_des">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lo_height_cv_item_des">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/img_drink"
                        android:layout_width="@dimen/lo_width_img_item_des"
                        android:layout_height="@dimen/lo_height_cv_item_des"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_drink_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lo_height_btn_ac_order"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/ten_dp"
                        android:text="@string/name_food"
                        android:textColor="@color/color_dark_green"
                        android:textSize="@dimen/txt_size_ac_reg"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/txt_drink_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_top_img_ac_logo"
                            android:gravity="left"
                            android:paddingLeft="@dimen/ten_dp"
                            android:text="@string/cost_food"
                            android:textColor="@color/color_dark_green"
                            android:textSize="@dimen/txt_size_ac_reg"
                            android:textStyle="italic|bold"/>

                        <TextView
                            android:id="@+id/txtVND"
                            android:text=" VND"
                            android:textColor="@color/color_dark_green"
                            android:textSize="@dimen/txt_size_ac_reg"
                            android:textStyle="bold|italic"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_top_img_ac_logo"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>